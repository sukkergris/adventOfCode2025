# General EditorConfig settings
root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# F# formatting: trim trailing whitespace and use consistent indentation
[*.fs]
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.fsx]
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

# MSBuild project files
[*.{fsproj,csproj,props,targets}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
